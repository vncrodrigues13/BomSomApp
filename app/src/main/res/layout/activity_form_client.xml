<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundTheme"
    android:id="@+id/layout_form_client">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastro de Clientes"
            android:textAlignment="center"
            android:textColor="@color/headerColor"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="65dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="CPF"
            android:textColor="@color/headerInput"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/client_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="50050900"
            android:maxLength="11"
            android:inputType="number"
            android:textColor="@color/inputColor"
            android:textColorHint="@color/inputColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="NOME"
            android:textColor="@color/headerInput"
            android:textSize="25dp" />


        <EditText
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Joca da Boca"
            android:inputType="text"
            android:textColor="@color/inputColor"
            android:textColorHint="@color/inputColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="EMAIL"
            android:textColor="@color/headerInput"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/client_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="jocabarbershop@gmail.com"
            android:inputType="textEmailAddress"
            android:textColor="@color/inputColor"
            android:textColorHint="@color/inputColor" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="TELEFONE"
            android:textColor="@color/headerInput"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/client_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="81999415188"
            android:maxLength="11"
            android:inputType="phone"
            android:textColor="@color/inputColor"
            android:textColorHint="@color/inputColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="ENDEREÇO"
            android:textColor="@color/headerInput"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/client_address_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Rua: Avenida Cara de Lagartixa"
            android:inputType="text"
            android:textColor="@color/inputColor"
            android:textColorHint="@color/inputColor" />

        <EditText
            android:id="@+id/client_address_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Número: 29"
            android:inputType="number"
            android:textColor="@color/inputColor"
            android:textColorHint="@color/inputColor" />

        <EditText
            android:id="@+id/client_address_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Bairro: Zológico de Cabra"
            android:inputType="text"
            android:textColor="@color/inputColor"
            android:textColorHint="@color/inputColor" />

        <EditText
            android:id="@+id/client_address_complement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Complemento: Casa"
            android:inputType="text"
            android:textColor="@color/inputColor"
            android:textColorHint="@color/inputColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="ESTILO MUSICAL"
            android:textColor="@color/headerInput"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/music_style_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:background="@color/calendar"
            android:entries="@array/spinner_music_styles"
            android:padding="5dp"/>


        <TextView
            android:id="@+id/save_client_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons_styles"
            android:textAlignment="center"
            android:text="Save"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:textColor="@color/inputColor"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>

</ScrollView>